<div class="about-page">
  <div class="about-hero">
    <%= image_tag "icon.png", alt: "Vödabuk", class: "about-icon" %>
    <h1><%= t("about.title") %></h1>
  </div>

  <div class="about-card">
    <p><%= t("about.intro") %></p>
  </div>

  <div class="about-stats">
    <div class="about-stat">
      <span class="about-stat-label">Volapük</span>
      <span class="about-stat-value">
        <span class="about-stat-number"><%= number_with_delimiter(@total_count) %></span>
        <span class="about-stat-unit"><%= t("about.words") %></span>
      </span>
    </div>
    <div class="about-stat">
      <span class="about-stat-label">Esperanto</span>
      <span class="about-stat-value">
        <span class="about-stat-number"><%= number_with_delimiter(@eo_count) %></span>
        <span class="about-stat-unit"><%= t("about.words") %></span>
      </span>
    </div>
  </div>

  <div class="about-card">
    <p>
      <%= t("about.contact_html",
            email_link: mail_to("glidis@vodabuk.com", "glidis@vodabuk.com"),
            repo_link: link_to(t("about.repository"), "https://github.com/maxelbo/vodabuk/issues")) %>
    </p>
  </div>

  <div class="about-card">
    <h2><%= t("about.sources_title") %></h2>
    <p><%= t("about.sources_html") %></p>
  </div>

  <div class="about-back">
    <%= link_to t("about.back"), root_path, class: "btn" %>
  </div>
</div>
